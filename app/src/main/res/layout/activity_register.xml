<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Register">

    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="201dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/walmartlogo"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp"
        android:src="@drawable/walmart2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#302E2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <TextView
        android:id="@+id/req"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="* required field"
        android:textStyle="bold"
        android:layout_marginBottom="17dp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="First name*"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/fnamev"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/et_style"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingBottom="3dp"
        android:layout_marginBottom="23dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Last name*"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/lnamev"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/et_style"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingBottom="3dp"
        android:layout_marginBottom="23dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/email"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Email address*"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/emailV"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/et_style"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingBottom="3dp"
        android:layout_marginBottom="23dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/password"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="password*"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/passwordv"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/et_style"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingBottom="3dp"
        android:layout_marginBottom="43dp"
        tools:ignore="SpeakableTextPresentCheck" />






    <Button
        android:id="@+id/createAcc"
        android:layout_width="349dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        app:backgroundTint="@color/light_blue"
        android:onClick="create"
        android:textAllCaps="false"
        android:text="Create account"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>